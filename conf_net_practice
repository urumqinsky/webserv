server   {
	ip 127.0.0.1;
	port 4444;
	root /Users/ltulune/Desktop/webserv/net_practice;
	server_name localhost;

	location /  {
		allow GET;
		max_body_size 55;
	}

	location /css  {
		allow GET;
		autoindex on;
		max_body_size 55;
	}

	location /js  {
		allow GET POST;
		autoindex on;
		max_body_size 55;
	}
	location /img {
		allow GET;
		autoindex on;
		max_body_size 100;
	}
}
error_page 500 501 502 /errors/5.html;
error_page 404 /errors/404.html;
error_page 401 /errors/401.html;
